{% extends 'base.html.twig' %}

{% block body_id 'admin_partido_index' %}

{% block main %}
        <h1>Listado de partidos</h1>

        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Partido</th>
                <th scope="col">Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for partido in partidos %}
                <tr>
                    <td>{{ partido.partido }}</td>
                    <td>
                        <div class="item-actions">
                            <a href="{{ path('partido_show', { 'id': partido.id }) }}" class="btn btn-sm btn-default">Ver</a>
                            <a href="{{ path('partido_edit', { 'id': partido.id }) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i> Editar
                            </a>
                            {{ include('_delete_form.html.twig', {
                                attr: {'style': 'display: inline-block'},
                                form: delete_forms[partido.id],
                                button_label: 'Eliminar',
                                button_css: 'btn-sm',
                            }) }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" align="center">No se ha registrado ning√∫n partido.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('partido_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> Agregar partido
        </a>
    </div>

    {{ parent() }}
{% endblock %}
