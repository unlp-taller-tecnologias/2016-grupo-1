{% extends 'base.html.twig' %}

{% block body_id 'visita_show' %}

{% block main %}
    <h1>Visita de un paciente</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Fecha</th>
                <td>{% if visita.fecha %}{{ visita.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ visita.observaciones }}</td>
            </tr>
            <tr>
                <th>Notas personales</th>
                <td>{{ visita.notasPersonales }}</td>
            </tr>
            <tr>
                <th>Motivos de consulta</th>
                <td>
                {% for motivo in visita.motivos %}
                    <li>{{ motivo.motivo }}</li>
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Diagn√≥sticos</th>
                <td>
                {% for diagnostico in visita.diagnosticos %}
                    <li>{{ diagnostico.diagnostico }}</li>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-link" href="{{ path('visita_index', {'id': visita.paciente.id}) }}">Volver a listado</a>

{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('visita_edit', { 'id': visita.id }) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> Editar visita
        </a>
    </div>

    <div class="section">
        {{ include('_delete_form.html.twig', {
            form: delete_form,
            button_label: 'Eliminar visita',
            button_css: 'btn-lg btn-block',
        }) }}
    </div>

    {{ parent() }}
{% endblock %}
