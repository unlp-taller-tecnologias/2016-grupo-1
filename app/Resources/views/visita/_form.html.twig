{% if show_confirmation|default(false) %}
    {% set attr = {'data-confirmation': 'true'} %}
    {{ include('visita/_delete_visita_confirmation.html.twig') }}
{% endif %}

{{ form_start(form, { attr: attr|default({}) }) }}
    {{ form_widget(form) }}

<input type="submit" value="{{ button_label|default('Guardar') }}"
       class="{{ button_css|default("btn btn-primary") }}" />

{% if include_back_to_home_link|default(false) %}
    <a href="{{ path('visita_index') }}" class="btn btn-link">
        {{ 'Volver al listado' }}
    </a>
{% endif %}
{{ form_end(form) }}