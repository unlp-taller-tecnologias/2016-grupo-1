{% extends 'base.html.twig' %}

{% block body %}
    <h1>Opción de medicación para examen prequirúrgico</h1>

    <table>
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ medicacion.id }}</td>
            </tr>
            <tr>
                <th>Medicación</th>
                <td>{{ medicacion.medicacion }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('medicacion_index') }}">Volver a la lista</a>
        </li>
        <li>
            <a href="{{ path('medicacion_edit', { 'id': medicacion.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
