{% extends 'base.html.twig' %}

{% block body_id "admin_medicacion_index" %}

    {% block main %}
        <h1>Lista de opciones de medicación (examen prequirúrgico)</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Medicación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for medicacion in medicacions %}
                    <tr>
                        <td>{{ medicacion.medicacion }}</td>
                        <td>
                            <div class="item-actions">
                                <a href="{{ path('medicacion_edit', { 'id': medicacion.id }) }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit" aria-hidden="true"></i> Editar
                                </a>
                                {{ include('_delete_form.html.twig', {
                                    attr: {'style': 'display: inline-block'},
                                    form: delete_forms[medicacion.id],
                                    button_label: 'Eliminar',
                                    button_css: 'btn-sm',
                                }) }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" align="center">No se ha registrado ninguna opción de medicación.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endblock %}

    {% block sidebar %}
        <div class="section">
            <a href="{{ path('medicacion_new') }}" class="btn btn-lg btn-block btn-success">
                <i class="fa fa-plus" aria-hidden="true"></i> Agregar opción
            </a>
        </div>

        {{ parent() }}
    {% endblock %}
