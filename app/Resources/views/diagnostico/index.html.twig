{% extends 'base.html.twig' %}

{% block main %}
    <h1>Lista de diagn&oacutesticos</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Diagn&oacutestico</th>
                <th><i class="fa fa-cogs" aria-hidden="true"></i> Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for diagnostico in diagnosticos %}
            <tr>
                <td>{{ diagnostico.diagnostico}}</td>
                <td>
                    <div class="item-actions">
                        <a href="{{ path('diagnostico_edit', { 'id': diagnostico.id }) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> Editar
                        </a>
                        {{ include('_delete_form.html.twig', {
                            attr: {'style': 'display: inline-block'},
                            form: delete_forms[diagnostico.id],
                            button_label: 'Eliminar',
                            button_css: 'btn-sm',
                        }) }}
                    </div>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="2" align="center">No se ha registrado ningun diagn&oacutestico.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endblock %}

    {% block sidebar %}
        <div class="section-actions">
            <a href="{{ path('diagnostico_new') }}" class="btn btn-lg btn-block btn-success">
                <i class="fa fa-plus" aria-hidden="true"></i> Agregar diagn&oacutestico
            </a>
        </div>

        {{ parent() }}

{% endblock %}
