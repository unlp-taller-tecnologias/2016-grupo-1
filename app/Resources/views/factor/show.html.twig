{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ver factor de riesgo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ factor.id }}</td>
            </tr>
            <tr>
                <th>Factor de riesgo</th>
                <td>{{ factor.factor }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('factor_index') }}">Volver a la lista</a>
        </li>
        <li>
            <a href="{{ path('factor_edit', { 'id': factor.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
