{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

<div class="container">
    <form id="form-login" action="{{ path("fos_user_security_check") }}" method="post">
        <h2 id="form-login-heading">Iniciar sesi√≥n</h2>
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <input class="form-control hide-spinners" type="number" id="username" name="_username"
               placeholder="{{ 'security.login.username'|trans }}" required="required" />

        <input class="form-control" type="password" id="password" name="_password"
               placeholder="{{ 'security.login.password'|trans }}" required="required" />

        <input class="btn btn-primary btn-lg btn-block" type="submit" id="_submit" name="_submit"
               value="{{ 'security.login.submit'|trans }}" />
    </form>
    {% if error %}
        <div class="col-md-offset-3 col-md-6">
            <div class="alert alert-danger text-center"
                 role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        </div>
    {% endif %}
</div>
